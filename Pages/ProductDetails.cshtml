@page "{id}"
@model ProductDetailsModel
@{
    ViewData["Title"] = Model.Product.Name + " - Details";
}

<html>
    <head>
        <title>@ViewData["Title"]</title>
    </head>

    <body>
        <h1>@Model.Product.Name Details</h1>
        <div class="card bg-light mb-3" style="max-width: 18rem;">
            <div class="card-header">@Model.Product.Name</div>
            <div class="card-body">
                <h5 class="card-title">Price: @Model.Product.Price $</h5>
            </div>
        </div>
        <a href="/"><button class="btn btn-primary">Back to main</button></a>
        <br />
        <br />
        <a href="/UpdateProduct/@Model.Product.ID"><button class="btn btn-danger">Update Details</button></a>

    </body>
</html>